# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000

# ============================================
# DATABASE
# ============================================
# MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<dbname>
MONGO_URI=mongodb+srv://[USERNAME]:[PASSWORD]@[CLUSTER].mongodb.net/handyland?retryWrites=true&w=majority

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=[GENERATE_256BIT_SECRET]
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Refresh Token
REFRESH_TOKEN_SECRET=[GENERATE_ANOTHER_256BIT_SECRET]
REFRESH_TOKEN_EXPIRE=30d

# ============================================
# STRIPE PAYMENT
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
# Validation: Must start with sk_live_
STRIPE_SECRET_KEY=sk_live_[YOUR_LIVE_SECRET_KEY]
# Validation: Must start with pk_live_
STRIPE_PUBLISHABLE_KEY=pk_live_[YOUR_LIVE_PUBLISHABLE_KEY]

# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_[YOUR_WEBHOOK_SECRET]

# ============================================
# EMAIL (SMTP)
# ============================================
# Recommended: SendGrid, Mailgun, AWS SES
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=[YOUR_SENDGRID_USERNAME]
SMTP_PASS=[YOUR_SENDGRID_API_KEY]

# Email settings
FROM_EMAIL=noreply@handyland.com
FROM_NAME=HandyLand

# ============================================
# FRONTEND & ADMIN URLS
# ============================================
FRONTEND_URL=https://handyland.com
ADMIN_URL=https://admin.handyland.com
BACKEND_URL=https://api.handyland.com

# ============================================
# CORS ALLOWED ORIGINS
# ============================================
# Comma-separated list of allowed domains
ALLOWED_ORIGINS=https://handyland.com,https://www.handyland.com,https://admin.handyland.com

# ============================================
# SECURITY
# ============================================
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# File upload limits (in MB)
MAX_FILE_SIZE=10

# ============================================
# OPTIONAL: MONITORING & LOGGING
# ============================================
# Sentry DSN (error tracking)
SENTRY_DSN=[OPTIONAL_SENTRY_DSN]

# Log level: error, warn, info, debug
LOG_LEVEL=info
